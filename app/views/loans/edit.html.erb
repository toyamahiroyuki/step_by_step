<div class="fixed-costs-title">
  <h1>ローン項目の編集</h1>
</div>

<%= form_for @loan, url: loan_path do |f| %>

<div class="container">
  <div class="row-fix">
    <div class="col-xs-6">

      <h4 class="fixed-table-title">項目と返済金額</h4>

			<table>

				<tr>
				  <th>ローン項目</th>
				  <td><%= f.text_field :loan_purpose %></td>
				</tr>

				<tr>
				  <th>返済金額</th>
				  <td><%= f.text_field :loan_cost %></td>
				</tr>

					<% @loan_items.each do |loan_item| %>
						<%= fields_for loan_item do |c| %>

							<tr>
							  <th><%= loan_item.created_at.strftime("%Y年%m月") %>の返済額</th>
							  <td><%= c.text_field :loan_by_month %></td>
							</tr>

						<% end %>
					<% end %>

			</table>

			<div class="fixed-edit">
				<%= f.submit "更新", class:'btn btn-danger' %>
			</div>

		</div>
	</div>
</div>

<% end %>
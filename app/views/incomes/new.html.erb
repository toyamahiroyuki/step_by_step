<div class="income-title">
  <h1>収入</h1>
</div>

<div class="container">
  <div class="row">
    <div class="col-xs-12">

    <table class="income-blue-table">

      <tr>
        <th>日付</th>
        <td><%= @income_day %></td>
      </tr>

      <%= form_for(@income) do |f| %>

      <%= f.hidden_field :day ,value: @income_day %>

      <tr>
        <th>収入金額</th>
        <td><%= f.text_field :income,value: 0 %></td>
      </tr>

      <tr>
        <th>項目</th>
        <td>
          <ul class="income-item">

            <li class="income-items"><%= f.radio_button :income_item, "給料" %>給料
            </li>

            <li class="income-items">
        	  <%= f.radio_button :income_item, "手当て" %>手当て
            </li>

            <li class="income-items">
        	  <%= f.radio_button :income_item, "退職金" %>退職金
            </li>

            <li class="income-items">
        	  <%= f.radio_button :income_item, "その他" %>その他
            </li>
          </ul>
        </td>
      </tr>

      <tr>
        <th>メモ</th>
        <td><%= f.text_field :income_memo %></td>
      </tr>

    </table>

    <div class="income-create-btn">

       <%= f.submit "登録", class:'btn btn-primary' %>
       <%= link_to "支出画面へ", new_proportial_cost_path(day: @income_day), class:'btn btn-warning' %>
    </div>

  </div>


<% end %>



    <table class="income-list-table">

    <% if current_user.incomes == nil %>

      <% else %>

        <tr>
          <th>日付</th>
          <th>収入金額</th>
          <th>項目</th>
          <th>メモ</th>
          <th></th>
          <th></th>
        </tr>
      <% end %>

    <% @incomes.each do |income| %>

        <tr>
          <td><%= income.day %></td>
          <td><%= income.income %></td>
          <td><%= income.income_item %></td>
          <td><%= income.income_memo %></td>
          <td><%= link_to "編集画面へ", edit_income_path(income, day: @income_day), class:'btn btn-primary' %></td>
          <td><%= link_to "削除へ", income_path(income), method: :delete, class:'btn btn-danger' %></td>
        </tr>

    <% end %>
    </table>
    

 </div>
</div>


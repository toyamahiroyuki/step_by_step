<div class="fixed-costs-title">
  <h1>固定費・ライフライン</h1>
</div>

<div class="container">
  <div class="row-fix">
    <div class="col-xs-5">

    <table >
      <h4 class="fixed-table-title">固定費</h4>
    <tr>
      <th>家賃</th>
      <td><%= @fixed_cost.rent %></td>
    </tr>

    <tr>
      <th>保険</th>
      <td><%= @fixed_cost.insurance %></td>
    </tr>

    <tr>
      <th>その他</th>
      <td><%= @fixed_cost.fixed_costs_other %></td>
    </tr>
    </table>
   </div>

    <div class="col-xs-1"></div>

    <div class="col-xs-5">

      <h4 class="fixed-table-title">ライフライン</h4>


    <table>
      <tr>
        <th>電気</th>
        <td><%= @lifeline.electron %></td>
      </tr>

      <tr>
        <th>ガス</th>
        <td><%= @lifeline.gass %></td>
      </tr>

      <tr>
        <th>水道</th>
        <td><%= @lifeline.water %></td>
      </tr>

    </table>

    </div>
  </div>
</div>

<div class="fixed-edit">
  <%= link_to "編集画面へ", edit_fixed_costs_path, class:'btn btn-success' %>
</div>




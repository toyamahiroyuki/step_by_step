<div class="target-title">
	<h1>貯金項目の作成</h1>
</div>

<%= form_for @target, url: targets_path do |f| %>

<div class="container">
  <div class="row">
    <div class="col-xs-6">

		  <h3 class="target-table-title">項目と目標金額</h3>

			<table class="target-blue-table">

				<tr>
				  <th>項目</th>
				  <td><%= f.text_field :target_purpose %></td>
				</tr>

				<tr>
				  <th>目標金額</th>
				  <td><%= f.text_field :target_cost %></td>
				</tr>

			</table>

      		<div class="target-create-btn">
						<%= f.submit "登録", class:'btn btn-primary btn-block' %>
			</div>

		</div>
	</div>
</div>

<% end %>


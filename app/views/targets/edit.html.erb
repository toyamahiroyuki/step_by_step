<div class="fixed-costs-title">
  <h1>貯金項目の編集</h1>
</div>

<%= form_for @target, url: target_path do |f| %>

<div class="container">
  <div class="row-fix">
    <div class="col-xs-6">

      <h4 class="fixed-table-title">項目と目標金額</h4>

		<table>

			<tr>
			  <th>項目</th>
			  <td><%= f.text_field :target_purpose %></td>
			</tr>

			<tr>
			  <th>目標金額</th>
			  <td><%= f.text_field :target_cost %></td>
			</tr>

		</table>

		<div class="fixed-edit">
			<%= f.submit "更新", class:'btn btn-primary' %>
		</div>

		</div>
	</div>
</div>

<% end %>


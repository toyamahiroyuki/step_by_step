<h1>Targets#index</h1>
<p>Find me in app/views/targets/index.html.erb</p>



<% @targets.each do |target| %>

	「目標目的」
	<%= target.target_purpose %></br>

	「貯金目標金額」
	<%= target.target_cost %>

			<%= link_to "目標の編集", edit_target_path(target.id) %>
			<%= link_to "目標の削除", target_path(target.id), method: :delete %></br>


    		<%= form_for @target_item, url: target_target_items_path(target) do |f| %>

			<%= f.label :貯金の追加 %>
			<%= f.text_field :target_by_month %>

			<%= f.hidden_field :target_id, value: target.id %>

			<%= f.submit "貯金" %>

		    <% end %>

		    「現在の貯金額」
			<%= target.target_items.sum(:target_by_month) %>円</br>


	<% target.target_items.each do |target_item| %>

		「日付」
		<%= target_item.created_at.strftime('%Y/%m/%d')  %>

	    「貯金額」
		<%= target_item.target_by_month %>

		「残り金額」
		<%= target_item.target_balance %>
		<%= link_to "貯金の編集", edit_target_target_item_path(target_item.id, id: target_item.id) %>
		<%= link_to "貯金の削除", target_target_item_path(target_item.id,id: target_item.id), method: :delete %></br>



	<% end %>

<% end %></br></br>



<% @loans.each do |loan| %>

	「ローン項目」
	 <%= loan.loan_purpose %></br>

	「ローン総額」
	 <%= loan.loan_cost %></br>


		<% loan.loan_items.each do |loan_item| %>

	　　「月の返済額」
		 <%= loan_item.loan_by_month %>

		 <% end %></br>

	「現在の返済額(Loan.loan_items.sum(Loan_item.loan_by_month)」
	<%= loan.loan_items.sum(:loan_by_month) %>円</br>

		<%= link_to "ローンの編集", edit_loan_path(loan.id) %>
		<%= link_to "ローンの削除", loan_path(loan.id), method: :delete %></br>

<% end %>






